<%- include('nav.ejs') %>
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="container-fluid bg-white">
        <div class="row">
          <h1>PROCESSING ORDERS</h1>
          <div class="col-12">
            <table class="table table-bordered text-dark">
                        <th>ACTION</th>
                        <th>SN</th>
                        <th>ORDER DATE</th>
                        <th>CUSTOMER NAME</th>
                        <th>ORDER AMOUNT</th>
                        <th>ORDER QTY</th>
                    </tr>
                <% for(i=0;i<orders.length;i++) { %>
                    <tr>
                        <td>
                          <a href="/admin/send_to_dispatch?id=<%=orders[i].order_tbl_id%>">                            
                            <button class="btn btn-primary p-0 pl-1 pr-1">Send To Dispatch</button>
                          </a>
                          </td>
                        <td><%=i+1%></td>
                        <td><%=orders[i].order_date.split("-").reverse().join("-")%></td>
                        <td><%=orders[i].user_name%></td>
                        <td><%=orders[i].ttl_order_amt%></td>
                        <td><%=orders[i].ttl_order_qty%></td>
                    </tr>
                <% } %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('footer.ejs')%>