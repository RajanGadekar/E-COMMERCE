<%- include('nav.ejs') %>
<style>
    .carousel-inner img {
        width: 100%;
        height: 100%;
    }
</style>
<div style="position: relative;" >
  <div id="demo" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
      <% for(i=0;i<slider_images.length;i++) { %>
      <li data-target="#demo" data-slide-to="<%=i%>" class="<%  if(i==0) { %> active <% } %>"></li>
      <% } %>
    </ul>
    <div class="carousel-inner">
      <% for(i=0;i<slider_images.length;i++) { %>
      <div class="carousel-item <%  if(i==0) { %> active <% } %>">
        <img src="/uploads/<%=slider_images[i].slider_image%>" alt="Los Angeles">
        <div class="carousel-caption">
          <h3><%=slider_images[i].slider_caption%></h3>
        </div>   
      </div>
      <% } %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
      <span class="carousel-control-next-icon"></span>
    </a>
  </div>
</div>
<br><br>
<h1 class="text-center" >- Top Rated Products</h1>
<div class="container">
  <div class="row">
    <% for(i=0;i<products.length;i++) { %>
    <div class="col-md-4">
      <div class="card">
      <img class="card-img-top w-100" style="width: 100%;" src="/uploads/<%=products[i].product_image%>" alt="Card Not Found">
      <div class="card-body">
        <h4 class="card-title"><%=products[i].product_name%></h4>
        <p class="card-text">
          <big><b>&#8377 <%=products[i].product_price%></b></big>
          <del>&#8377 <%=products[i].duplicate_price%></del>
        </p>
        <a href="/view_product?product_id=<%=products[i].product_id%>" class="btn btn-primary">VIEW PRODUCT</a>
      </div>  
    </div>
    </div>
    <% } %>
  </div>
</div>
<br><br>
